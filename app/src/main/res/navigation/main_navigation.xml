<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.livedata_guesstheword.title.TitleFragment"
        android:label="TitleFragment"
        tools:layout="@layout/fragment_title"
        >
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment"

            app:launchSingleTop="true"
            />
    </fragment>
    <!--todo: add Animation via style -->

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.livedata_guesstheword.game.GameFragment"
        android:label="GameFragment"
        tools:layout="@layout/fragment_game"
        >
        <action
            android:id="@+id/action_gameFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />
    </fragment>

    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.example.livedata_guesstheword.score.ScoreFragment"
        android:label="ScoreFragment"
        tools:layout="@layout/fragment_score"
        >
        <action
            android:id="@+id/action_scoreFragment_to_gameFragment"
            app:destination="@id/gameFragment" />

        <argument
            android:name="score"
            android:defaultValue="0"
            app:argType="integer"
            />

    </fragment>

</navigation>